@page
@model RazorPageHotelApp.Pages.Rooms.CreateRoomModel
@{
    ViewData["Title"] = "Create Room";
}

<p>@Model.InfoText</p>

<h1>Create room</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All">
                <input type="hidden" asp-for="@Model.Room.HotelNr" class="form-control" />
                <div class="form-group">
                    <label asp-for="@Model.Room.RoomNr"></label><br/>
                    <input asp-for="@Model.Room.RoomNr">
                </div>
                <div class=" form-group">
                    <label>Type</label><br />
                    <select asp-for="@Model.Room.Types" asp-items="@Model.TypesOptions"></select>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Room.Price"></label><br />
                    <input asp-for="@Model.Room.Price">
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" />
                    <a asp-page="/Hotels/GetAllHotels"><input type="button" value="Cancel" /> </a>
                </div>
            </div>
        </form>
    </div>
</div>