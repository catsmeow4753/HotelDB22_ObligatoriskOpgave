@page
@model RazorPageHotelApp.Pages.Rooms.DeleteRoomModel
@{
    ViewData["Title"] = "Delete Room";
}

<p>@Model.InfoText</p>

<h1>Delete room</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All">
                <input type="hidden" asp-for="@Model.Room.RoomNr" class="form-control" />
                <input type="hidden" asp-for="@Model.Room.HotelNr" class="form-control" />
                <input type="hidden" asp-for="@Model.Room.Types" class="form-control" />
                <input type="hidden" asp-for="@Model.Room.Price" class="form-control" />
                <div class="form-group">
                    <label asp-for="@Model.Room.RoomNr"></label><br />
                    <label>@Model.Room.RoomNr</label>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Room.HotelNr"></label><br />
                    <label>@Model.Room.HotelNr</label>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Room.Types"></label><br />
                    <label>@Model.Room.Types</label>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Room.Price"></label><br />
                    <label>@Model.Room.Price</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete" />
                    <a asp-page="/Rooms/GetAllRooms"><input type="button" value="Cancel" /></a>
                </div>
            </div>
        </form>
    </div>
</div>