@page
@model RazorPageHotelApp.Pages.Hotels.UpdateHotelModel
@{
    ViewData["Title"] = "Update Hotel";
}

<p>@Model.InfoText</p>

<h1>Update hotel</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All">
                <input type="hidden" asp-for="@Model.Hotel.HotelNr" class="form-control" />
                <div class="form-group">
                    <label asp-for="@Model.Hotel.Navn"></label><br />
                    <input asp-for="@Model.Hotel.Navn">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Hotel.Adresse"></label><br />
                    <input asp-for="@Model.Hotel.Adresse">
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" />
                    <a asp-page="/Hotels/GetAllHotels"><input type="button" value="Cancel" /> </a>
                </div>
            </div>
        </form>
    </div>
</div>