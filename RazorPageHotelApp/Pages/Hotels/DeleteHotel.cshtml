@page
@model RazorPageHotelApp.Pages.Hotels.DeleteHotelModel
@{
    ViewData["Title"] = "Delete Hotel";
}

<p>@Model.InfoText</p>

<h1>Delete hotel</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All">
                <input type="hidden" asp-for="@Model.hotel.HotelNr" class="form-control" />
                <input type="hidden" asp-for="@Model.hotel.Navn" class="form-control" />
                <input type="hidden" asp-for="@Model.hotel.Adresse" class="form-control" />
                <div class="form-group">
                    <label asp-for="@Model.hotel.HotelNr"></label><br />
                    <label>@Model.hotel.HotelNr</label>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.hotel.Navn"></label><br />
                    <label>@Model.hotel.Navn</label>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.hotel.Adresse"></label><br />
                    <label>@Model.hotel.Adresse</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Delete" />
                    <a asp-page="/Hotels/GetAllHotels"><input type="button" value="Cancel" /></a>
                </div>
            </div>
        </form>
    </div>
</div>